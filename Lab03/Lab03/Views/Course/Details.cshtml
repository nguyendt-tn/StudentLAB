@model Lab03.Models.Course

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Credits)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Credits)
        </dd>
        <dt>
            Students
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Student ID</th>
                    <th>Mid Name</th>
                    <th>Last Name</th>
                    <th>Enrollment Date</th>
                </tr>
                @foreach (var item in Model.Enrollments)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Student.ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Student.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Student.FirstMidName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Student.EnrollmentDate)
                        </td>
                    </tr>
                }
            </table>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.CourseID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
